<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroumd"
    tools:context=".SelectLoginActivity">


    <Button
        android:id="@+id/btnCreateANewAccount"
        android:layout_width="300dp"
        android:layout_height="76dp"
        android:layout_margin="2dp"
        android:layout_marginTop="210dp"

        android:layout_marginBottom="50dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/amaranth"
        android:onClick="createANewAccount"
        android:text="Create a New Account"
        android:textAllCaps="false"
        android:textColor="#1C8EFF"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignClient" />

    <Button
        android:id="@+id/btnSignClient"
        android:layout_width="300dp"
        android:layout_height="86dp"
        android:layout_margin="2dp"
        android:layout_marginTop="210dp"

        android:background="@drawable/custom_button"
        android:fontFamily="@font/amaranth"
        android:onClick="signInAsAClient"
        android:text="Sign in As A Client"
        android:textAllCaps="false"
        android:textColor="#1C8EFF"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Crypto Lite"
        android:textColor="@color/white"
        android:textSize="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>