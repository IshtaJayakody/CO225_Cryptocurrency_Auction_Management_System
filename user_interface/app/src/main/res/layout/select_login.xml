<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectLoginActivity">


    <Button
        android:id="@+id/btnCreateANewAccount"
        android:layout_width="359dp"
        android:layout_height="76dp"
        android:layout_margin="2dp"
        android:layout_marginBottom="16dp"
        android:onClick="createANewAccount"
        android:text="Create a new Account"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSignAdmin"
        android:layout_width="355dp"
        android:layout_height="82dp"
        android:layout_margin="2dp"
        android:text="Sign in As An Admin"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCreateANewAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSignClient"
        android:layout_width="360dp"
        android:layout_height="86dp"
        android:layout_margin="2dp"
        android:onClick="signInAsAClient"
        android:text="Sign in As A Client"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSignAdmin"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>